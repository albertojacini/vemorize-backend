{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/backend/*": ["./backend/*"],
      "@/shared/*": ["./shared/*"],
      "@/utils/*": ["./utils/*"],
      "@/types/*": ["./types/*"],
      "@/scripts/*": ["./scripts/*"],
      "@/lab/*": ["./lab/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "backend/**/*.ts",
    "shared/**/*.ts",
    "types/**/*.ts",
    "lab/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lab/node_modules"
  ]
}
