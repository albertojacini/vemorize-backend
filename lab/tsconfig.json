{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/backend/*": ["../backend/*"],
      "@/shared/*": ["../shared/*"],
      "@/utils/*": ["../utils/*"],
      "@/lab/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "../backend/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
